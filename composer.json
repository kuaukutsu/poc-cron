{
  "name": "kuaukutsu/poc-cron",
  "description": "Proof of Concept: scheduler eventloop",
  "keywords": [
    "proof of concept",
    "scheduler",
    "cron"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitriy Krivopalov",
      "email": "dimarik82@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/kuaukutsu/poc-cron/issues",
    "source": "https://github.com/kuaukutsu/poc-cron"
  },
  "require": {
    "php": "^8.1",
    "ext-pcntl": "*",
    "kuaukutsu/ds-collection": "^2.0",
    "revolt/event-loop": "*"
  },
  "require-dev": {
    "vimeo/psalm": "^5.15",
    "friendsofphp/php-cs-fixer": "^3.13",
    "icanhazstring/composer-unused": "^0.8",
    "phpunit/phpunit": "^9.5",
    "rector/rector": "^0.18",
    "roave/infection-static-analysis-plugin": "^1.3",
    "roave/security-advisories": "dev-latest",
    "slevomat/coding-standard": "^8.7",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "infection/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "kuaukutsu\\poc\\cron\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "kuaukutsu\\poc\\cron\\tests\\": "tests"
    }
  }
}
